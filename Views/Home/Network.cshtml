@model IEnumerable<EquidCMS.Models.TblSocialLinkdin>
@{
    ViewData["Title"] = "Network";
    Layout = "~/Views/Shared/_LayoutWebSNW.cshtml";
}
<style>
    .grid-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 2rem;
    }

    .grid-item {
        display: flex;
    }

    .card--people {
        display: flex;
        flex-direction: column;
        flex: 1 1 auto;
    }


    .card--people {
        background: white;
        border-radius: 8px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: transform 0.3s;
    }

        .card--people:hover {
            transform: translateY(-5px);
        }

    .card__inner {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .card__content {
        display: flex;
        flex-direction: column;
        flex: 1;
        padding: 1.2rem;
        padding-bottom: 2rem; /* Increase bottom padding */
    }
    .card__title {
        font-size: 1.3rem;
        font-weight: bold;
        margin-bottom: 0.3rem;
    }

    .card__subtitle {
        font-size: 0.95rem;
        color: #555;
        margin-bottom: 0.8rem;
    }

    .card__bio p {
        font-size: 0.9rem;
        color: #444;
        margin-bottom: 1rem;
    }

    .card__focus-areas {
        margin-top: auto;
    }

    .card__focus-area {
        display: inline-block;
        padding: 0.4rem 0.8rem;
        border-radius: 4px;
        font-size: 0.85rem;
        text-decoration: none;
        font-weight: 500;
        transition: background 0.3s;
    }

        .card__focus-area:hover {
            background: #0A66C222;
        }

    .card__focus-areas a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 50px; /* Adjust the size of the circle */
        height: 50px; /* Adjust the size of the circle */
        border-radius: 50%; /* Make it round */
        background: transparent; /* Make the circle transparent initially */
        color: #0A66C2; /* Set icon color to blue */
        border: 2px solid #0A66C2; /* Increase border size to make it more visible */
        outline: none;
        font-size: 1.5rem; /* Adjust icon size */
        transition: background 0.3s, color 0.3s, border-color 0.3s; /* Smooth transition */
        text-decoration: none;
    }

        .card__focus-areas a i {
            font-size: 1.2rem; /* Adjust font size if needed */
            color: inherit; /* Use inherited color */
        }

        /* Hover effect for LinkedIn icon */
        .card__focus-areas a:hover {
            background-color: #0A66C2; /* Keep LinkedIn blue on hover */
            color: var(--bs-white); /* Keep text/icon color as white */
        }


    .card__image {
        position: relative;
        width: 100%;
        overflow: hidden;
    }

    .card__image-wrap {
        width: 100%;
        height: 300px;
        overflow: hidden;
    }

        .card__image-wrap img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            object-position: top; /* This is the fix! */
            display: block;
        }


    .image--cover {
        object-fit: cover;
        width: 100%;
        height: 300px;
    }
</style>


<section class="hreo_inner purple_bg pt-80 pb-80" style="background-image: url(/assets/img/hero_about-us.webp);">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-12">
                <div class="wow fade-in-bottom " data-wow-delay="200ms">
                    <div class="section-title-3">
                        <h1 class="mb-20">Our Network</h1>
                        @* <p class="sub-heading">Sub Heading.</p> *@
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<section class="py-5">
    <div class="container">
        <div class="grid-container">
            @foreach (var member in Model)
            {
                <div class="grid-item">
                    <div class="card card--people">
                        <div class="card__inner">
                            <div class="card__image">
                                <div class="card__image-wrap">
                                    <img src="@member.Photo" alt="@member.Name" class="image--cover" />
                                </div>
                            </div>
                            <div class="card__content">
                                <h3 class="card__title">@member.Name</h3>
                                <p class="card__subtitle">@member.Post @if (!string.IsNullOrEmpty(member.Organization))
                                    {
                                        @(" | " + member.Organization)
                                    }</p>
                                <div class="card__bio">
                                    <p>@member.Email</p>
                                </div>
                                <div class="card__focus-areas">
                                    <a href="@member.Linkdinlink" target="_blank"><i class="fa-brands fa-linkedin-in"></i></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>




