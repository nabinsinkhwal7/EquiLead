    <style>
        /* Custom table styling */
        table.dataTable {
            border-collapse: collapse;
            width: 100%;
            margin: 20px 0;
            font-size: 13px;
            font-family: "Nunito", sans-serif;
        }

            table.dataTable th,
            table.dataTable td {
                padding: 10px 15px;
                text-align: left;
                border: 1px solid #ddd;
            }

            table.dataTable th {
                background-color: #5259e3;
                color: white;
                font-weight: bold;
            }

            table.dataTable tbody tr:nth-child(even) {
                background-color: #f9f9f9;
            }

            table.dataTable tbody tr:hover {
                background-color: #e9ecef;
            }

        /* Pagination and search box styling */
        .dataTables_wrapper .dataTables_paginate .paginate_button {
            background-color: #5259e3;
            color: white;
            border: none;
            padding: 5px 10px;
            cursor: pointer;
        }

            .dataTables_wrapper .dataTables_paginate .paginate_button:hover {
                background-color: #5259e3;
            }

        .dataTables_wrapper .dataTables_filter input {
            padding: 5px 10px;
            margin: 0 10px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .mt-4 {
            margin-top: 0.5rem !important;
        }

        
        .signup-gradient {
            background: linear-gradient(180deg, #720493 0%, #53046B 100%) !important;
            font-family: 'Nunito', 'Open Sans';
            font-weight: 900;
        }
        .signup-gradientgreen{
            background: linear-gradient(180deg, #75D2A6 0%, #27A760 100%) !important;
        }
    </style>
